<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andriod="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        card_view:cardCornerRadius="0dp"
        card_view:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="start"
                android:padding="5dp"
                android:text="10/10/2018"
                android:textColor="@color/colorTextDark"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:gravity="start"
                android:padding="5dp"
                android:text="10/10/2018"
                android:textColor="@color/colorTextDark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/narration1"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_toStartOf="@+id/amount"
                android:layout_toEndOf="@id/date"
                android:ellipsize="none"
                android:gravity="start"
                android:padding="5dp"
                android:scrollHorizontally="false"
                android:text="ghjdgjhasgjhghgsajhgashgdas dsa  ds sd sa  sad sa d sa sad  das sa sad sd sda"
                android:textColor="@color/colorTextDark"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:text="10/10/2018 hjkjh dfd"
                android:textColor="@color/colorTextDark"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/narration2"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/narration1"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@+id/amount"
                android:layout_toEndOf="@id/date1"
                android:ellipsize="none"
                android:gravity="start"
                android:padding="5dp"
                android:scrollHorizontally="false"
                android:text="10/10/2018 jhkjh  sd d ds ds d s ds ds ds ds dsd sd ds  d ds ds ds ds ds d ds"
                android:textColor="@color/colorTextDark"
                android:textSize="12sp"
                android:textStyle="normal" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>