<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="layout.fr_checkout_confirm">

    <include
        android:id="@+id/tbActivityMain"
        layout="@layout/toolbarsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tbActivityMain"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/white"
        card_view:cardCornerRadius="0dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ipay2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgsuccess"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/iconcheck" />

                <TextView
                    android:id="@+id/lblthank"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgsuccess"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:lines="1"
                    android:text="@string/thank_you"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor2"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblorder"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgsuccess"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:lineSpacingMultiplier="1.4"
                    android:lines="4"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor2"
                    android:textSize="14dp" />


                <Button
                    android:id="@+id/btnhome"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/lblcoupon"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorButton"
                    android:text="@string/my_orders"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
